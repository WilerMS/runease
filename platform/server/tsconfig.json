{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core": ["src/core/index"],
      "@api/*": ["src/api/*"],
      "@utils": ["src/utils/index"]
    },
    "outDir": "dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}